  <div class="ui inverted form">
    <h1>Login</h1>
    <div class="two fields">
      <div class="field">
        {{! <label>Email</label> }}
        <input placeholder="Email" type="text" id="loginEmail" />
      </div>
      <div class="field">
        {{! <label>Password</label> }}
        <input placeholder="Password" type="text" id="loginPassword" />
      </div>
    </div>
    <div class="buttons">
      <button class="ui inverted cancel button" id="cancelButton">
        Cancel
      </button>
      <button class="ui inverted ok button" id="loginButton">
        Login
      </button>
    </div>
  </div>

  <div class="ui inverted form">
    <h1>Sign Up</h1>
    <div class="fields">
      <div class="field">
        <label>First name</label>
        <input type="text" placeholder="First Name" id="first_name" />
      </div>
      <div class="field">
        <label>Last name</label>
        <input type="text" placeholder="Last Name" id="last_name" />
      </div>
    </div>
    <div class="field">
      <label>Email</label>
      <input type="text" placeholder="Email" id="email" />
    </div>

    <div class="field">
      <label>Username</label>
      <input type="text" placeholder="Username" id="username" />
    </div>
    <div class="fields">
      <div class="field">
        <label>Password</label>
        <input type="text" placeholder="Password" id="password" />
      </div>
      <div class="field">
        <label>Confirm Password</label>
        <input
          type="text"
          placeholder="Confirm Password"
          id="confirm_password"
        />
      </div>
    </div>
    <div class="buttons">
      <button class="ui button" id="cancelButton">
        Cancel
      </button>
      <button class="ui button" id="signUpButton">
        Sign Up!
      </button>
    </div>
