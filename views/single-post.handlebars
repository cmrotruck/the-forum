<div class="ui items">
  <div class="item">
    <div class="image">
      <img src="{{ post.post_image }}">
    </div>
    <div class="content">
      <a class="header">{{ post.post_title }}</a>
      <div class="meta">
        <span>{{ user.username }}</span>
      </div>
      <div class="description">
        <p>{{ post.post_text }}</p>
      </div>
      <div class="extra">
        {{ post.created_at }}
      </div>
    </div>
  </div>

<div class="ui comments">
  <h3 class="ui dividing header">Comments</h3>
  {{#each post.comments as |comment|}}
  {{> comment comment}}
  {{/each}}
  
  {{#if loggedIn}}
  <form class="ui form comment-form">
    <div class="field">
      <textarea name="comment-body"></textarea>
    </div>
    <button class="ui button" type="submit">Add Comment</button>
  </form>
  {{/if}}

</div>

{{#if loggedIn}}
<script src="javascript/add-comment.js"></script>
{{/if}}
