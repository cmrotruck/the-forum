  <a class="section" href="/">Home</a>
  <i class="right chevron icon divider"></i>
  <a class="section" href="/group/{{group.group_id}}">group_name</a>
  <i class="right chevron icon divider"></i>
  <div class="active section">{{ post.post_title}}</div>
</div>

