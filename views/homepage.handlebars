  <div class="ui two stackable cards">
    <div class="card">
      <div class="image">
        <img src="/images/gardening.jpg" />
      </div>
      <div class="content">
        <a class="header" href="#">Gardening</a>
      </div>
    </div>
    <div class="card">
      <div class="image">
        <img src="/images/movies.jpg" />
      </div>
      <div class="content">
        <a class="header" href="#">Movies</a>
      </div>
    </div>
    <div class="card">
      <div class="image">
        <img src="/images/sale.jpg" />
      </div>
      <div class="content">
        <a class="header" href="#">For Sale/Trade</a>
      </div>
    </div>
    <div class="card">
      <div class="image">
        <img src="/images/sports.jpg" />
      </div>
      <div class="content">
        <a class="header" href="#">Sports</a>
      </div>
    </div>
  </div>

  <div class="ui small modal login">
    <div class="ui inverted segment">
      <div class="ui form">
        <h1>Login</h1>
        <div class="two fields">
          <div class="field">
            {{! <label>Email:</label> }}
            <input placeholder="Email" type="text" id="loginEmail" />
          </div>
          <div class="field">
            {{! <label>Password:</label> }}
            <input placeholder="Password" type="text" id="loginPassword" />
          </div>
        </div>
        <div class="buttons">
          <button class="ui inverted green button" id="loginButton">
            Login
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="ui small modal signup">
    <div class="ui inverted segment">
      <div class="ui inverted form">
        <h1>Sign Up</h1>
        <div class="two fields">
          <div class="field">
            <label>First name</label>
            <input type="text" placeholder="First Name" id="first_name" />
          </div>
          <div class="field">
            <label>Last name</label>
            <input type="text" placeholder="Last Name" id="last_name" />
          </div>
        </div>
        <div class="field">
          <label>Email</label>
          <input type="text" placeholder="Email" id="email" />
        </div>

        <div class="field">
          <label>Username</label>
          <input type="text" placeholder="Username" id="username" />
        </div>
        <div class="two fields">
          <div class="field">
            <label>Password</label>
            <input type="text" placeholder="Password" id="password" />
          </div>
          <div class="field">
            <label>Confirm Password</label>
            <input
              type="text"
              placeholder="Confirm Password"
              id="confirm_password"
            />
          </div>
        </div>
        <button class="ui inverted green button" id="signUpButton">
          Sign Up!
        </button>
      </div>
    </div>
  </div>
</div>

